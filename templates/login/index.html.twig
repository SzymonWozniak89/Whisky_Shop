{% extends 'base.html.twig' %}
{% block title %}Log in{% endblock %}
{% block body %}
    <div id="intro" class="bg-image shadow-2-strong">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-7">
                        <form class="bg-light border border-dark mb-5 mt-5 rounded-5 shadow-5-strong p-5" action="{{ path('login') }}"
                              method="post">
                            <!-- Login input -->
                            <div class="form-outline mb-4">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <label class="form-label" for="form1Example1">Username</label>
                                <input type="text" id="form1Example1" class="form-control" name="_username"
                                       value="{{ last_username }}"/>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form1Example2">Password</label>
                                <input type="password" id="form1Example2" class="form-control" name="_password"/>
                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                {# <div class="col d-flex justify-content-center" style="font-size: 12px;">
                                    hint: use interview/interview as credentials
                                </div> #}
                                {% if error %}
                                    {% if error.messageKey == 'Invalid credentials.' %}
                                        <p class="w3-error">&#x26D4;&#xFE0F; Invalid login or password.<br>Please
                                            check your
                                            details and try again.</p>
                                    {% else %}
                                        <p class="w3-error">
                                            &#x26D4;&#xFE0F; {{ error.messageKey|trans(error.messageData, 'security') }}</p>
                                    {% endif %}
                                {% endif %}
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-outline-dark mt-auto btn-block">Sign in</button>                      
                            <a href="{{ path('signUp') }}" style="float: right;" class="btn btn-outline-dark mt-auto">Register now!</a>         
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}